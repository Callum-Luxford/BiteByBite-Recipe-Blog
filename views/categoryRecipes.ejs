<h1 class="category__title page__title title">Categories</h1>

<nav aria-label="breadcrumbs" class="category__nav">
    <ol class="breadcrumbs">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/categories">Categories</a></li>
        <% if (locals.categoryById) { %>
            <% categoryById.forEach((recipe) => { %>
                <% categoryName = recipe.category %>
            <% }) %>
            <li class="breadcrumb-item--active" aria-current="page"><%= categoryName %></li>
        <% } %>
    </ol>
</nav>

<h1 class="title"><%- locals.categories %></h1>

<div class="recipe__card__container">

    <% if (typeof categoryById !=='undefined' && categoryById.length> 0) { %>
        <% categoryById.forEach((recipe, index)=> { %>

            <a href="/recipe/<%= recipe._id %>" class="category__link">
                <div class="category__image category__image--large">
                    <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %>" loading="lazy">
                </div>
                <h2>
                    <%= recipe.name %>
                </h2>
            </a>
            <% }) %>
        <% } else { %>
            <!-- <p>No items found.</p> -->
    <% } %>

</div>